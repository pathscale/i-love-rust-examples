[Unit]
Description=coldvaults auth
After=network.target
StartLimitIntervalSec=0

[Service]
User=cv
Type=simple
Restart=always
RestartSec=1
WorkingDirectory=/home/cv/coldvaults
ExecStart=/usr/bin/bash -c 'cargo run --bin auth --release --host=auth.defi.digital --port=443 --config=etc/config.json'

StandardError=file:/home/cv/coldvaults/log/coldvaults_auth.log
StandardOutput=file:/home/cv/coldvaults/log/coldvaults_auth.log
StandardInput=null

[Install]
WantedBy=default.target

